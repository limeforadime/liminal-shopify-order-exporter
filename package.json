{
  "name": "liminal-shopify-order-exporter",
  "author": {
    "name": "David Gilbert",
    "email": "david_gilbert64@yahoo.com"
  },
  "license": "MIT",
  "keywords": [
    "shopify",
    "plugin",
    "node",
    "next"
  ],
  "description": "Shopify app which allows shop owners to export CSV data, written in Next, Node, MongoDB and GraphQL",
  "main": "server/index.js",
  "scripts": {
    "test": "jest --verbose",
    "tunnel": "ngrok http 8081",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js",
    "dev-debug": "cross-env NODE_ENV=development NODE_OPTIONS='--inspect' node server/index.js",
    "build": "next build",
    "start-prod-probably-wont-work": "npm run build && NODE_ENV=production node server/index.js",
    "prestart": "shopify.bat node tunnel stop",
    "start": "shopify.bat node serve"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 115
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "node_modules",
      ".next"
    ],
    "watch": [
      "server/**/*",
      "routes/**/*",
      "utils/**/*",
      "webhooks/**/*"
    ],
    "ext": "js,json"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@babel/runtime": "^7.17.2",
    "@koa/router": "^10.1.1",
    "@shopify/app-bridge": "^2.0.14",
    "@shopify/app-bridge-react": "^2.0.14",
    "@shopify/app-bridge-utils": "^2.0.14",
    "@shopify/koa-shopify-webhooks": "^4.4.3",
    "@shopify/polaris": "^9.0.0",
    "@shopify/polaris-icons": "^4.18.0",
    "@shopify/shopify-api": "^2.1.0",
    "content-type": "^1.0.4",
    "core-js": "^3.21.1",
    "cross-env": "^7.0.3",
    "cryptr": "^6.0.2",
    "dotenv": "^16.0.0",
    "flat": "^5.0.2",
    "graphql": "^16.3.0",
    "isomorphic-fetch": "^3.0.0",
    "jwt-decode": "^3.1.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-combine-routers": "^4.0.2",
    "koa-session": "^6.2.0",
    "moment": "^2.29.1",
    "mongoose": "^6.2.4",
    "next": "^11.0.1",
    "papaparse": "^5.3.1",
    "raw-body": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "simple-koa-shopify-auth": "^1.0.5",
    "store-js": "^2.0.4",
    "webpack": "^5.70.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-stage-3": "^7.8.3",
    "@types/jest": "^27.4.1",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npmlog": "^6.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "./jest.transform.js"
    },
    "rootDir": ".",
    "collectCoverageFrom": [
      "**/convertTagsToQueryString.js"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
